<% if post.user == current_user %>
  <nav class="level is-mobile">
    <div class="level-left">
      <p class="level-item">
        <small> <%= link_to edit_post_path(post) do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %> |
                <%= link_to post_path(post), data: {"turbo-method": :delete}, class: "trash" do %>
                   <i class="fa-solid fa-trash-can"></i>
                <% end %>
          </small>
        </p>
      </div>
     </nav>
<% end %>
