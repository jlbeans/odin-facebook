<div class="section">
  <div class="subtitle is-6">Friends</div>
  <% if current_user.friends.any? %>
      <% current_user.friends.each do |friend| %>
      <li> <div class="level">
             <div class="level-left">
               <p class="level-item"><%= image_tag user_avatar(friend, 75) %></p>
               <p class="level-item"><%= link_to friend.name, user_path(friend) %></p>
             </div>

             <div class="level-right">
               <p class="level-item"><%= link_to "Remove Friend", friend_ship_path(id: friend.id), data: { "turbo-method": :delete }, class: "button is-danger" %></p>
              </div>
            </div><br />
       </li>
      <% end %>
  <% else  %>
    <p> No friends yet! </p>
  <% end %>
 </div>
</div>
