<% like = likable.likes.find_by(user: current_user) %>
  <% if like %>
    <%= link_to polymorphic_path([likable, like]), data: { "turbo-method": :delete }, class: "unlike hidden-button has-text-info-dark" do %>
      <i class="fas fa-thumbs-up liked"></i> <%= likable.likes.count %>
    <% end %>
  <% else %>
     <%= link_to polymorphic_path([likable, :likes]), data: { "turbo-method": :post }, class: "like hidden-button has-text-info-dark" do %>
       <i class='fas fa-thumbs-up'></i> <%= likable.likes.count %>
     <% end %>
  <% end %>
