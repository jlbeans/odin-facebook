<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="title is-4">Update Profile</div>
          <%= form_with(model: @user, local: true) do |f| %>

            <div class="field">
              <div class="control">
                <div class="row">
                  <div class="columns">
                    <div class="column">
                        <%= image_tag user_avatar(@user, 300) %>
                    </div>

                    <div class="column">
                     <%= f.file_field :avatar %>
                   </div>
                  </div>
                 </div>
                </div>
               </div>

            <div class="field">
              <div class="control">
                <%= f.text_field :profession, autofocus: true, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.text_field :location, autofocus: true, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <%= f.submit "Update", class: "button is-info" %>

          <% end %>
        </div>
      </div>
    </div>
