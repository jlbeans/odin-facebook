<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="title is-4">Update Profile</div>
          <%= form_with(model: @user, local: true) do |f| %>

            <div class="field">
              <div class="control">
                <div class="row">
                  <div class="columns">
                    <div class="column">
                        <%= image_tag user_avatar(@user, 300) %>
                    </div>

                    <div class="column">
                     <%= f.file_field :avatar %>
                   </div>
                  </div>
                 </div>
                </div>
               </div>

            <div class="field">
                 <div class="control">
                   <label for= 'location'>Location:</label>
                   <%= f.text_field :location, autofocus: true %>
                 </div>
               </div>

            <div class="field">
              <div class="control">
                <label for= 'profession'>Profession:</label>
                <%= f.text_field :profession, autofocus: true %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label for= 'education'>Education:</label>
                <%= f.text_field :education, autofocus: true %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label for= 'relationship'>Relationship Status:</label>
                <%= f.text_field :relationship, autofocus: true %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label for= 'birthday'>Birthday:</label>
                <%= f.date_select :birthday, autofocus: true, discard_year: true, prompt: true %>
              </div>
            </div>

            <%= f.submit "Update", class: "button is-info" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>

  <nav class="navbar is-fixed-bottom">
    <div class="navbar-menu">
      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <%= link_to 'Cancel', root_path, class: "button is-dark" %>
          </p>
      </div>
    </div>
  </nav>
