<%= form_for [commentable, Comment.new] do |f| %>
  <article class="media">
    <figure class="media-left">
      <%= image_tag user_avatar(current_user, 64) %>
    </figure>
    <div class="media-content">
      <div class="field">
        <div class="control comment-box">
          <%= f.text_area :body, label: false, input_html: { class: "textarea" }, wrapper: false, placeholder: "Add a comment" %>
        </div>
      </div>
      <nav class="level">
        <div class="level-left">
          <div class="level-item">
            <%= f.submit "Comment", class: "button is-primary" %>
          </div>
        </div>
      </nav>
    </div>
  </article>
<% end %>
